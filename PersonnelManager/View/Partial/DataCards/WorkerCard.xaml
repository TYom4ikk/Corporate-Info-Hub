<UserControl x:Class="PersonnelManager.View.Partial.DataCards.WorkerCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PersonnelManager.View.Partial.DataCards"
             mc:Ignorable="d" 
             d:DesignHeight="150" d:DesignWidth="800">
    <Grid x:Name="Rectangle" Background="PaleGreen">
        <StackPanel VerticalAlignment="Center">
            <StackPanel Orientation="Horizontal">
                <Label x:Name="LabelDepartment" Content="[Department]"/>
                <Label Content="—"/>
                <Label x:Name="LabelPost" Content="[Post]"/>
            </StackPanel>
            <Label x:Name="LabelFullName" Content="[FullName]" FontSize="20" FontWeight="Bold"/>
            <!--FULL NAME-->

            <StackPanel Orientation="Horizontal">
                <Label x:Name="LabelPhoneNumber" Content="[PhoneNumber]"/>
                <Label x:Name="LabelEmail" Content="[Email]"/>
            </StackPanel>
            <Label x:Name="labelCabinet" Content="[Cabinet]"/>
        </StackPanel>
    </Grid>
</UserControl>
